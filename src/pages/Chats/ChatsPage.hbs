<div class="chats-wrapper background">
    <div class="chats-list">
        <div class="users-block">
            <div class="profile-link">
                <a class="navLink white" onclick="renderPage('settingsPage')">Профиль →</a>
            </div>
            <div class="search-place">
                <input type="text" placeholder="Поиск"></input>
            </div>
        </div>
        <div class="dialog-list">
            <div class="dialog">{{{dialog}}}</div>
        </div>
    </div>
    <div class="full-chat">
        <div class="companion-info">
            <div class="friend">
                <div class="friend-avatar"></div>
                <div class="friend-name">Ivan</div>
            </div>
            <button class="chat-settings"></button>
        </div>
        <div class="messages-wrapper">{{{message}}}</div>
        <div class="typing-place">
            <div class="input-file-wrapper">{{{inputFile}}}</div>
            <input class="typing-input-text" type="text" name="message">
            <button class="send">→</button>
        </div>
    </div>
</div>