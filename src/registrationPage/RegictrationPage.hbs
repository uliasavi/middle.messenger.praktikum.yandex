<div class="wrapper-login background">
    <div class="login-form-wrapper login-form-wrapper_long">
        <form action="post">
            <h2 class="small-margin">Регистрация</h2>
            <div class="wrapper-input wrapper-input_small">
                <label for="email">Почта</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="login">Логин</label>
                <input type="text" name="login" id="login">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="first_name">Имя</label>
                <input type="text" name="first_name" id="first_name">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="second_name">Фамилия</label>
                <input type="text" name="second_name" id="second_name">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="phone">Телефон</label>
                <input type="phone" name="phone" id="phone">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="password">Пароль</label>
                <input type="password" name="password" id="password">
            </div>
            <div class="wrapper-input wrapper-input_small">
                <label for="password_repeat">Пароль(еще раз)</label>
                <input type="password" name="password_repeat" id="password_repeat">
            </div>
            <div id="registrationBtn" class="submit-btn-wrapper">
                <button class="submitBtn" onclick="preventDefault(), renderPage('login')"><span>Зарегистрироваться</span></button>
            </div>
            <a class="navLink" onclick="renderPage('login')">Войти</a>
        </form>
    </div>
</div>